{
  "version": 2,
  "env": {
    "GEMINI_API_KEY": "@gemini_api_key",
    "TAVILY_API_KEY": "@tavily_api_key",
    "ENVIRONMENT": "production",
    "DEBUG": "False",
    "PORT": "8000",
    "HOST": "0.0.0.0",
    "LLM_MODEL": "gemini-2.0-flash"
  },
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python@4.1.0",
      "config": {
        "maxLambdaSize": "15000",
        "runtime": "python3.11"
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}